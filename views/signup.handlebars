<div class="container login-container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-8">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-start">Sign Up</h4>
          <form id="signup-form">
          
             <div class="form-group signup-form">
              <label for="name">Username</label>
              <input type="text" class="form-control" id="name-signup" placeholder="Enter name">
            </div>
              <div class="form-group" >
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email-signup" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password-signup" placeholder="Password">
            </div>
            <div class="login-btn">
              <button type="submit" id="signup-btn" class="btn btn-block">Sign up!</button>
            </div>
            <div class="sign-up">
              <a href="/login" id="sign-up-text">Login instead</a>
            </div>
            
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>